@model UniversalLibrary.Models.BookOnlineViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Book Online</h4>
<br />
<p>
    <a asp-controller="Authors" asp-action="Create" class="btn btn-outline-primary"> AUTHORS</a>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-outline-primary"> CATEGORIES</a>
    <a asp-controller="BookPublishers" asp-action="Create" class="btn btn-outline-primary"> BOOK PUBLISHERS</a>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <partial name= "_BookOnlines" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Create</button> 
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}