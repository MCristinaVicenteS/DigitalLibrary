@model IEnumerable<UniversalLibrary.Data.Entities.BookOnline>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--CSS-->
<link href="~/asset/css/bootstrap.css" rel="stylesheet" />
<link href="~/asset/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/asset/css/responsive.css" rel="stylesheet" />
<link href="~/asset/css/style.css" rel="stylesheet" />
<a href="~/asset/css/style.css.map"></a>


<!--FONTES-->
<a href="~/asset/fonts/fontawesome-webfont.ttf"></a>
<a href="~/asset/fonts/fontawesome-webfont.woff"></a>
<a href="~/asset/fonts/fontawesome-webfont.woff2"></a>
<a href="~/asset/fonts/octin_sports_rg.ttf"></a>

<!--JS-->
<script src="~/asset/js/bootstrap.js"></script>
<script src="~/asset/js/custom.js"></script>
<script src="~/asset/js/jquery-3.4.1.min.js"></script>


<main @*class="d-flex justify-content-center"*@>
    <h1>Books Online Management</h1>
    <br />
    <p>
        <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Create New</a>
    </p>

    <!-- Begin Book Online section -->
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="box">
                            <a href="">
                                <div class="img-box">
                                    @if (!string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="@Url.Content(item.Image)" asp-append-version="true" />
                                    }                                   
                                </div>
                                <div class="detail-box">
                                    <h6>
                                        Title:
                                        <span>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </span>
                                    </h6>
                                </div>
                                <div class="detail-box">
                                    <h6>
                                        Number of Pages	:
                                        <span>
                                            @Html.DisplayFor(modelItem => item.PageNumber)
                                        </span>
                                    </h6>
                                </div>
                                <div class="new">
                                    <span>
                                        @Html.DisplayFor(modelItem => item.Year)
                                    </span>
                                </div>
                                <div class="actions">
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- End Book section -->
</main>

