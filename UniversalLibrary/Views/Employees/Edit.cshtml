@model UniversalLibrary.Data.Entities.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageEmployee" />
            
            <partial name="_Employees" />

            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-outline-dark"><i class="fa fa-floppy-disk">Save</i></button>
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i>Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageEmployee))
        {
            <img src="@Url.Content(Model.ImageEmployee)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto">
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}