@model UniversalLibrary.Models.BookPublisherViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Book Publisher Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImagLog" />  @*o url passa escondido para o user -> mas preciso dele para o update*@
            
            <partial name="_BookPublishers" />

            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImagLog))
        {
            <img src="@Url.Content(Model.ImagLog)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto">
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
