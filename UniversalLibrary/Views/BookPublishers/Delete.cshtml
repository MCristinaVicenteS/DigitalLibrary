}
<br />
<h1>Book Publisher Delete</h1>

<h4>Are you sure you want to delete this?</h4>
<br />
<div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PublisherName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PublisherName)
