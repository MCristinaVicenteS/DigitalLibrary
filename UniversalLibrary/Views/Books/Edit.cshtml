@*@model UniversalLibrary.Data.Entities.Book*@
@model UniversalLibrary.Models.BookViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />   @*o id passa escondido para o user -> mas preciso dele para o update*@
            <input type="hidden" asp-for="Image" /> @*o url passa escondido para o user -> mas preciso dele para o update*@
           
            <partial name="_Books" />
           
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button> @*com icon -> podemos mudá-lo*@
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to List</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
