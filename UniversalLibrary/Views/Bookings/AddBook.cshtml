@model UniversalLibrary.Models.AddItemViewModel

@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}
<br />
<br />
<br />
<h1>Add Book</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" asp-items="Model.Books" class="form-control"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Create" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@*o select é o q faz a combobox e recebe a selectListItem criada no BookRepository*@
@*a action AddBook do LoanOnlineController -> vai trazer para aqui os Books*@