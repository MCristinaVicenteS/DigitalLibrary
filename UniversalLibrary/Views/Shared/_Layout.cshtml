<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniversalLibrary</title>
    <link href="https://fonts.googleapis.com/css?family=Dosis:300,400,500" /> @*template 404*@
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!--CSS-->
    <link href="~/asset/css/bootstrap.css" rel="stylesheet" />
    <link href="~/asset/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/asset/css/responsive.css" rel="stylesheet" />
    <link href="~/asset/css/style.css" rel="stylesheet" />
    <a href="~/asset/css/style.css.map"></a>


    <!--FONTES-->
    <a href="~/asset/fonts/fontawesome-webfont.ttf"></a>
    <a href="~/asset/fonts/fontawesome-webfont.woff"></a>
    <a href="~/asset/fonts/fontawesome-webfont.woff2"></a>
    <a href="~/asset/fonts/octin_sports_rg.ttf"></a>

    <!--JS-->
    <script src="~/asset/js/bootstrap.js"></script>
    <script src="~/asset/js/custom.js"></script>
    <script src="~/asset/js/jquery-3.4.1.min.js"></script>   
</head>
<body>
    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section">
            <nav class="navbar navbar-expand-lg custom_nav-container ">


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/Logo (2).png" alt="Logo" width="200">
                    </a>
                    <ul class="navbar-nav flex-grow-1">
                    </ul>

                    @* ---------AUTHENTICATED AREA-----------*@
                    <ul class="nav navbar-nav navbar-right">
                        @if (this.User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ChangeUser">@this.User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Sign Up</a>
                            </li>

                        }

                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login"><i class="fa fa-user" aria-hidden="true"></i>  Sign In</a>
                            </li>

                        }
                    </ul>

                    @* ---------ADMIN AREA-----------*@
                    <ul class="nav navbar-nav navbar-right">
                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="DashEmployees" asp-action="Index">Employee</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>

                        }

                    </ul>

                    @* ---------EMPLOYEE AREA-----------*@
                    <ul class="nav navbar-nav navbar-right">
                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="DashEmployees" asp-action="Index">Employee</a>
                            </li>

                        }

                    </ul>

                </div>
            </nav>
        </header>
    </div>
    <!-- end header section -->


    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <br />
                <br />
                <form action="/pesquisar" method="get">
                    <input type="text" name="query" placeholder="Search" style="width: 500px;">
                    <button type="submit">Search</button>
                </form>
                <br />
                <br />
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav  ">    
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="PhisicalLibrary">Phisical Libraries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Books">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="BookOnline">E-Book</a>
                        </li>                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Characteristics</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Category">Categories</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="BookPublisher">Book Publishers</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Author">Authors</a></li>
                            </ul>
                        </li>

                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="LoanOnlines" asp-action="Index">Loan E-Book</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="LoanOnlines" asp-action="Create"><i class="fa fa-shopping-cart"></i> Cart</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </header>
    </div>
    <!-- end header section -->



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- info section -->

    <section class="info_section  layout_padding2-top text-center">
        <div class="social_container">
            <div class="social_box">
                <a href="">
                    <i class="fa fa-facebook" aria-hidden="true"></i>
                </a>
                <a href="">
                    <i class="fa fa-twitter" aria-hidden="true"></i>
                </a>
                <a href="">
                    <i class="fa fa-instagram" aria-hidden="true"></i>
                </a>
                <a href="">
                    <i class="fa fa-youtube" aria-hidden="true"></i>
                </a>
            </div>
        </div>
        <div class="info_container">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-3 mx-auto">
                        <h6>
                            ABOUT US
                        </h6>
                        <p>
                            Descubra um mundo de conhecimento na nossa biblioteca, onde as páginas se tornam portas para aventuras inesquecíveis.
                        </p>
                    </div>
                    <div class="col-md-6 col-lg-3 mx-auto">
                        <div class="info_form">
                            <h5>
                                Newsletter
                            </h5>
                            <form action="#">
                                <input type="email" placeholder="Enter your email">
                                <button>
                                    Subscribe
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mx-auto">
                        <h6>
                            CONTACT US
                        </h6>
                        <div class="contact-section" id="contact">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span> Av da Liberdade nº 5, <br />Lisboa 1250-150 </span>
                            </a>
                            <br />
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>213999999</span>
                            </a>
                            <br />
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span> UnivelsalLibrary@gmail.com</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- end info section -->
    <!-- footer section -->
    <section>
        <footer class="footer_section">
            <div class="container">
                <p>
                    &copy; <span id="displayYear"></span> Todos os direitos reservados por
                    <a href="https://www.UniversalLibrary.com/">Universal Library</a>
                </p>
            </div>
        </footer>

        <!-- footer section -->
    </section>

    <!-- end info section -->
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Função para rolar suavemente para a seção de contato
        function scrollToContact() {
            const contactSection = document.getElementById("contact");
            contactSection.scrollIntoView({ behavior: "smooth" });
        }
    </script>

</body>
</html>

