@model IEnumerable<UniversalLibrary.Data.Entities.BookOnline>

@{
    ViewData["Title"] = "BookOnline";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--CSS-->
<link href="~/asset/css/bootstrap.css" rel="stylesheet" />
<link href="~/asset/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/asset/css/responsive.css" rel="stylesheet" />
<link href="~/asset/css/style.css" rel="stylesheet" />
<a href="~/asset/css/style.css.map"></a>


<!--FONTES-->
<a href="~/asset/fonts/fontawesome-webfont.ttf"></a>
<a href="~/asset/fonts/fontawesome-webfont.woff"></a>
<a href="~/asset/fonts/fontawesome-webfont.woff2"></a>
<a href="~/asset/fonts/octin_sports_rg.ttf"></a>

<!--JS-->
<script src="~/asset/js/bootstrap.js"></script>
<script src="~/asset/js/custom.js"></script>
<script src="~/asset/js/jquery-3.4.1.min.js"></script>


<main @*class="d-flex justify-content-center"*@>
    <br />
    <h1>Books Online Area</h1>
    <!-- Begin Book section -->
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="box">
                            <a href="">
                                @*<a asp-area="" asp-controller="Home" asp-action="DetailsBookOnline" asp-route-id="@item.Id">*@
                                    <div class="img-box">
                                        @*<img src="@("~/images/"+item.Image)" asp-append-version="true" />*@
                                             @if (!string.IsNullOrEmpty(item.Image))
                                             {
                                                <img src="@Url.Content(item.Image)" asp-append-version="true" />
                                             }
                                    </div>
                                    <div class="detail-box">
                                        <h6>
                                            Title:
                                            <span>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </span>
                                        </h6>
                                    </div>
                                    <div class="detail-box">
                                        <h6>
                                            Number of Pages	:
                                            <span>
                                                @Html.DisplayFor(modelItem => item.PageNumber)
                                            </span>
                                        </h6>
                                    </div>
                                    <div class="new">
                                        <span>
                                            @Html.DisplayFor(modelItem => item.Year)
                                        </span>
                                    </div>
                                    <div class="actions">
                                        @*Alterar a action*@
                                        <a asp-controller="LoanOnlines" asp-action="AddItemToCart" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa fa-shopping-cart"></i></a>
                                    </div>
                                    <br />
                                    <div class="actions">
                                        <a class="btn btn-info" asp-action="DetailsBookOnline" asp-route-id="@item.Id">Details</a>
                                    </div>
                                </a>
                           @* </a>*@
                            
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- End Book section -->
</main>