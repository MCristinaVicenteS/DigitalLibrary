<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />

<style type="text/css">
    .tableFixedHead {
        overflow-y: auto;
        height: 200px;
    }

        .tableFixedHead thead th {
            position: sticky;
            top: 0px;
        }

    .table {
        margin-left: auto;
        margin-right: auto;
        width: 80%;
    }

        .table th, .table td {
            text-align: center;
        }

    .th {
        text-align: center;
    }

    .td {
        text-align: center;
    }

    thead th {
        background-color: darkolivegreen;
        color: white;
    }

    tr:hover {
        background-color: bisque;
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LibraryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CloseTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.LibraryName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.OpenTime)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CloseTime)
            </td>
            <td>
                    <a asp-action="DetailsPhisicalLibrary" asp-route-id="@item.Id" class="btn btn-info"> Details</a>
            </td>
        </tr>
}
    </tbody>
</table>


