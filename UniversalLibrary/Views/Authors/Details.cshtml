@model UniversalLibrary.Data.Entities.Author

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Author Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <div class="row"> 
        <div class="col-md-8"> 
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nif)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nif)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nationality)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nationality)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Biography)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Biography)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MajorWorks)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MajorWorks)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AwardsAndRecognitions)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AwardsAndRecognitions)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.OtherDetails)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.OtherDetails)
                </dd>
            </dl>
        </div>
    </div>  
</div>
<div class="col-md-4">
    @if (!string.IsNullOrEmpty(Model.ImageAuthor))
    {
        <img src="@Url.Content(Model.ImageAuthor)" alt="Image" style="width:300px;height:450px;max-width:100%;height:auto">
    }
</div>
<br />
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-pen"></i> Edit</a>
    <a asp-action="Index" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to List</a>
</div>
